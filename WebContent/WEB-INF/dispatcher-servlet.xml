<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:ws="http://jax-ws.dev.java.net/spring/core" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:wss="http://jax-ws.dev.java.net/spring/servlet" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
		http://www.springframework.org/schema/util  
		http://www.springframework.org/schema/util/spring-util-3.2.xsd   	
		http://www.springframework.org/schema/tx
		http://www.springframework.org/schema/tx/spring-tx.xsd		
		http://www.springframework.org/schema/aop 
  		http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

	<context:annotation-config />
	<context:component-scan base-package="com.admas.logiware" />

	<mvc:annotation-driven />

	<mvc:default-servlet-handler />
	<import resource="hibernate-context.xml" />

	<bean id="customerService" class="com.admas.logiware.services.CustomerServices">
		<property name="customerLogic" ref="customerLogic"></property>
	</bean>

	<bean id="customerLogic" class="com.admas.logiware.logic.CustomerLogicImpl">
		<property name="customerDao" ref="customerDao"></property>
	</bean>

	<bean id="customerDao" class="com.admas.logiware.dao.CustomerDaoImpl" />

	<!-- Beans required for Masters services START -->

	<bean id="masterServices" class="com.admas.logiware.services.masters.MasterServices">
		<property name="mastersLogic" ref="mastersLogic"></property>
	</bean>

	<bean id="mastersLogic" class="com.admas.logiware.logic.masters.MastersLogicImpl">
		<property name="mastersDao" ref="mastersDao"></property>
	</bean>


	<bean id="mastersDao" class="com.admas.logiware.dao.masters.MastersDaoImpl" />

	<!-- Beans required for Masters services END -->

	<!-- Beans required for contract company services -->

	<bean id="userManagementService"
		class="com.admas.logiware.services.usermgt.UserManagementService">
		<property name="userManagementLogicImpl" ref="userManagementLogicImpl"></property>
	</bean>

	<bean id="userManagementLogicImpl"
		class="com.admas.logiware.logic.usermgt.UserManagementLogicImpl">
		<property name="userManagementDao" ref="userManagementDao"></property>
	</bean>

	<bean id="userManagementDao" class="com.admas.logiware.dao.usermgt.UserManagementDaoImpl" />

	<!-- END Beans required for Usr management services -->
	
	<!-- Beans required for contract company services START -->

	<bean id="contractCompServices" class="com.admas.logiware.services.contractcomp.ContractCompServices">
		<property name="contractCompLogic" ref="contractCompLogic"></property>
	</bean>

	<bean id="contractCompLogic" class="com.admas.logiware.logic.contractcomp.ContractCompLogicImpl">
		<property name="contractCompDao" ref="contractCompDao"></property>
	</bean>


	<bean id="contractCompDao" class="com.admas.logiware.dao.contractcomp.ContractCompDaoImpl" />

	<!-- Beans required for contract company END -->
	
	<!-- Beans required for contract company route services START -->

	 <bean id="compRouteServices" class="com.admas.logiware.services.contractcomp.CompRouteServices">
		<property name="compRouteLogicImpl" ref="compRouteLogicImpl"></property>
	</bean>

	<bean id="compRouteLogicImpl" class="com.admas.logiware.logic.contractcomp.CompRouteLogicImpl">
		<property name="compRouteDaoImpl" ref="compRouteDaoImpl"></property>
	</bean>


	<bean id="compRouteDaoImpl" class="com.admas.logiware.dao.contractcomp.ComRouteDaoImpl" />

	<!-- Beans required for contract company route services END -->
	
	<!-- Beans required for TransportOwner services START -->

	<bean id="transOwnerServices" class="com.admas.logiware.transowner.services.TransOwnerServices">
		<property name="transOwnerLogicImpl" ref="transOwnerLogicImpl"></property>
	</bean>

	<bean id="transOwnerLogicImpl" class="com.admas.logiware.transowner.logic.TransOwnerLogicImpl">
		<property name="transOwnerDao" ref="transOwnerDao"></property>
	</bean>


	<bean id="transOwnerDao" class="com.admas.logiware.transowner.dao.TransOwnerDaoImpl" />

	<!-- Beans required for TransportOwner END -->
	
		<!-- Beans required for TransportDetail services START -->

	<bean id="transportDetailServices" class="com.admas.logiware.transowner.services.TransportDetailServices">
		<property name="transportDetailLogicImpl" ref="transportDetailLogicImpl"></property>
	</bean>

	<bean id="transportDetailLogicImpl" class="com.admas.logiware.transowner.logic.TransportDetailLogicImpl">
		<property name="transportDetailDao" ref="transportDetailDao"></property>
	</bean>


	<bean id="transportDetailDao" class="com.admas.logiware.transowner.dao.TransportDetailDaoImpl" />

	<!-- Beans required for TransportDetail END -->

	<!--Beans for Route Payment Service Start -->
	
	<bean id="RoutePaymentServices"
		class="com.admas.logiware.services.contractcomp.RoutePaymentServices">
		<property name="routePaySettingLogicImpl" ref="routePaySettingLogicImpl"></property>
	</bean>
	<bean id="routePaySettingLogicImpl"
		class="com.admas.logiware.logic.contractcomp.RoutePaySettingLogicImpl">
		<property name="routePaySettingDaoImpl" ref="routePaySettingDao"></property>
	</bean>
	<bean id="routePaySettingDao" class="com.admas.logiware.dao.contractcomp.RoutePaySettingDaoImpl" />

	<!--Beans for Route Payment Service Start -->


	<!--Beans for Load Service Start -->

	<bean id="LoadServices" class="com.admas.logiware.services.contractcomp.LoadServices">
		<property name="loadLogic" ref="loadLogicImpl"></property>
	</bean>
	<bean id="loadLogicImpl" class="com.admas.logiware.logic.contractcomp.LoadLogicImpl">
		<property name="loadDao" ref="loadDaoImpl"></property>
	</bean>
	<bean id="loadDaoImpl" class="com.admas.logiware.dao.contractcomp.LoadDaoImpl" />

	<!--Beans for Load Service End -->


	<!-- Beans required for SMS START -->
	
	<bean id="smsService" class="com.admas.ngemp.sms.services.SmsService">
	<property name="smsLogicImpl" ref="smsLogicImpl"></property>
	</bean>

	<bean id="smsLogicImpl" class="com.admas.ngemp.sms.logic.SmsLogicImpl">
		<property name="smsDaoImpl" ref="smsDaoImpl"></property>
	</bean> 
	<bean id="smsDaoImpl" class="com.admas.ngemp.sms.dao.SmsDaoImpl"></bean> 
	<!-- <bean id = "deliveryThread" 
		class="com.admas.ngemp.sms.backendprocess.DeliveryThread"> <constructor-arg 
		ref="smsDaoImpl"></constructor-arg> </bean> <bean id = "sendingThread" class="com.admas.ngemp.sms.backendprocess.SendingThread"> 
		<constructor-arg ref="smsDaoImpl"></constructor-arg> </bean> -->
</beans>